{
  "name": "remix-rick-morty",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "version": "1.0.4",
  "scripts": {
    "build": "react-router build",
    "build:e2e": "npm run build && cp .env ./build/.env || true",
    "dev": "react-router dev",
    "drizzle:generate": "drizzle-kit generate --config ./app/db/drizzle/drizzle.config.ts",
    "drizzle:migrate": "drizzle-kit migrate --config ./app/db/drizzle/drizzle.config.ts",
    "drizzle:seed": "vite-node --script ./app/db/drizzle/seed.ts",
    "drizzle:reset-seed": "vite-node --script ./app/db/drizzle/reset-seed.ts",
    "lint": "npx @biomejs/biome check",
    "lint:fix": "npx @biomejs/biome check --write --unsafe ",
    "lint:oxc": "oxlint",
    "start": "react-router-serve ./build/server/index.js",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "typecheck": "react-router typegen && tsc",
    "prepare": "lefthook install || true",
    "setup:dockerdb": "docker run --name react-router-rick-morty -e POSTGRES_USER=admin -e POSTGRES_PASSWORD=Admin12345 -e POSTGRES_DB=rickmorty-favorites -p 5432:5432 -v ./postgres-data:/var/lib/postgresql/ -d postgres"
  },
  "dependencies": {
    "@react-router/node": "^7.3.0",
    "@react-router/serve": "^7.4.0",
    "@tailwindcss/vite": "^4.0.15",
    "class-variance-authority": "^0.7.1",
    "dotenv": "^16.4.7",
    "drizzle-orm": "^0.41.0",
    "isbot": "^5.1.25",
    "jose": "^6.0.10",
    "pg": "^8.14.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-router": "^7.4.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@playwright/test": "^1.51.1",
    "@react-router/dev": "^7.4.0",
    "@types/node": "^22.13.11",
    "@types/pg": "^8.11.11",
    "@types/react": "^19.0.12",
    "@types/react-dom": "^19.0.4",
    "drizzle-kit": "^0.30.5",
    "drizzle-seed": "^0.3.1",
    "lefthook": "^1.11.3",
    "oxlint": "^0.16.2",
    "tailwindcss": "^4.0.15",
    "typescript": "^5.1.6",
    "vite": "^6.2.2",
    "vite-tsconfig-paths": "^5.0.1"
  },
  "engines": {
    "node": "22.x"
  }
}
